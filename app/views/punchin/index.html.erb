<h1>Punches</h1>

<%= link_to 'Home', root_path %><br>
<%= link_to 'New punch in', new_punchin_path %><br>

<table>
	<tr>
		<th>Client</th>
		<th>Time</th>
	</tr>

	<% @punchin.each do |punchin| %>
		<tr>
			<td><%= punchin.client %></td>
			<!--<td><%= punchin.time %></td>-->
			<td><%= punchin.created_at.in_time_zone("Pacific Time (US & Canada)") %></td>
			<td><%= link_to 'Show', punchin_path(punchin) %></td>
			<td><%= link_to 'Edit', edit_punchin_path(punchin) %></td>
			<td><%= link_to 'Destroy', punchin_path(punchin),
					method: :delete,
					data: { confirm: 'Are you sure?' } %></td>
		</tr>
	<% end %>
</table>